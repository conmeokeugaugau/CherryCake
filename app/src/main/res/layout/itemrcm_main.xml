<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="76dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="25dp">
    <ImageView
        android:id="@+id/itrcmBgr"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/roundnotselect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/itrcmPict"
        android:background="@color/candy"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="@id/itrcmBgr"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/itrcmName"
        android:text="Hoa cúc"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/itrcmBgr"
        app:layout_constraintLeft_toRightOf="@id/itrcmPict"/>
    <TextView
        android:id="@+id/itrcmPrice"
        android:text="30.000đ"
        android:textStyle="bold"
        android:textColor="@color/cake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/itrcmName"
        app:layout_constraintLeft_toRightOf="@id/itrcmPict"/>
    <ImageButton
        android:id="@+id/itrcmAdd"
        android:src="@drawable/plus"
        android:layout_width="24dp"
        android:layout_height="21dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>